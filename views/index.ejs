<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>
<body>
  <% if(error.length > 0){ %>
       <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
  <span class="inline-block mt-1 mb-1 text-white">
    <%= error %>
  </span>
       </div>
     <% } %>

  <% if(registererror.length > 0){ %>
       <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
  <span class="inline-block mt-1 mb-1 text-white">
    <%= registererror[0] %>
  </span>
       </div>
 <% } %>
  <% if(loginerror.length > 0){ %>
       <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
  <span class="inline-block mt-1 mb-1 text-white">
    <%= loginerror[0] %>
  </span>
       </div>
 <% } %>
  <% if(passworderror.length > 0){ %>
       <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
  <span class="inline-block mt-1 mb-1 text-white">
    <%= passworderror[0] %>
  </span>
       </div>
 <% } %>


  <div class="w-full h-screen  ">
    <h2 class="text-3xl m-5">SCRATCH</h2>
    <div class="mt-40 px-10 flex justify-around  gap-5  w-full">
      <div class="bg-white  w-1/3 h-75 flex flex-col items-start">
        <h1 class="text-2xl">Welcome to <span class="text-blue-400 font-bold">SCRATCH</span></h1>
        <h1 class="text-xl  text-blue-400 mt-3">Create account</h1>
        <form class="w-full gap-5 mt-4 flex flex-col p-1 text-gray-600 justify-start" action="users/register" method="post">
          <input type="text" name="fullname" class=" bg-gray-300 py-2 px-3 outline-none  rounded-md" placeholder="Fullname">
          <input type="email"  name="email" class=" bg-gray-300 py-2 px-3 outline-none  rounded-md" placeholder="Enter email">
          <input type="password"  name="password" class="bg-gray-300 py-2 px-3 outline-none  rounded-md"  placeholder="Create password">
          <div class="flex items-start">
            <input type="submit" class=" w-32 cursor-pointer bg-blue-400 py-2 px-2 rounded-full text-white" value="Create Account ">

          </div>
        </form>
      </div>
      <div class="mt-20 font-bold text-blue-400">OR</div>
      <div class="bg-white w-1/3 h-75 mt-10">
        <h1 class="text-xl  text-blue-400 mt-3">Login Your Account</h1>
        <form class="w-full gap-5 mt-4 flex flex-col p-1 text-gray-600 justify-start" action="users/login" method="post">
         
          <input type="email" name="email"  class=" bg-gray-300 py-2 px-3 outline-none  rounded-md" placeholder="Enter email">
          <input type="password" name="password"  class="bg-gray-300 py-2 px-3 outline-none  rounded-md"  placeholder="Password">
          <div class="flex items-center">
            <input type="submit" class=" cursor-pointer bg-blue-400 py-2 px-3  rounded-full text-white" value="Login ">
      </div>
    </div>
  </div>
</body>
</html>